@page "/jokeeditor"
@attribute [Authorize(Roles = "Admin")]
<PageTitle>Joke Editor</PageTitle>

<div class="container-fluid" style="padding: 25px;">
    <div class="card">
        <div class="card-body">
            <h1>Joke Editor</h1>
            <p>Manage and edit jokes in the database.</p>

            @if (isLoading)
            {
                <div class="text-center my-5">
                    <div class="spinner-border" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="mt-2">Loading jokes...</p>
                </div>
            }
            else if (editingJoke != null)
            {
                <!-- Edit Form -->
                <div class="edit-form">
                    <h3>Edit Joke #@editingJoke.JokeId</h3>
                    
                    <div class="mb-3">
                        <label for="jokeTxt" class="form-label">Joke Text</label>
                        <textarea class="form-control" id="jokeTxt" rows="4" @bind="editingJoke.JokeTxt"></textarea>
                    </div>

                    <div class="mb-3">
                        <label for="attribution" class="form-label">Attribution</label>
                        <input type="text" class="form-control" id="attribution" @bind="editingJoke.Attribution" />
                    </div>

                    <div class="mb-3">
                        <label for="imageTxt" class="form-label">Image Description</label>
                        <textarea class="form-control" id="imageTxt" rows="2" @bind="editingJoke.ImageTxt"></textarea>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Categories</label>
                        <div class="categories-list">
                            @foreach (var category in allCategories)
                            {
                                <div class="form-check">
                                    <input class="form-check-input" 
                                           type="checkbox" 
                                           id="cat_@category.JokeCategoryId" 
                                           checked="@selectedCategoryIds.Contains(category.JokeCategoryId)"
                                           @onchange="@(e => ToggleCategory(category.JokeCategoryId, e))" />
                                    <label class="form-check-label" for="cat_@category.JokeCategoryId">
                                        @category.JokeCategoryTxt
                                    </label>
                                </div>
                            }
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="activeInd" class="form-label">Active</label>
                        <select class="form-select" id="activeInd" @bind="editingJoke.ActiveInd">
                            <option value="Y">Yes</option>
                            <option value="N">No</option>
                        </select>
                    </div>

                    <div class="button-group">
                        <button class="btn btn-primary" @onclick="SaveJoke" disabled="@isSaving">
                            @if (isSaving)
                            {
                                <span class="spinner-border spinner-border-sm me-2"></span>
                            }
                            Save Changes
                        </button>
                        <button class="btn btn-secondary" @onclick="CancelEdit" disabled="@isSaving">
                            Cancel
                        </button>
                    </div>

                    @if (!string.IsNullOrEmpty(editMessage))
                    {
                        <div class="alert @editAlertClass mt-3" role="alert">
                            @editMessage
                        </div>
                    }
                </div>
            }
            else
            {
                <!-- List View -->
                <div class="filter-section mb-3">
                    <div class="row">
                        <div class="col-md-4">
                            <label for="searchText" class="form-label">Search</label>
                            <input type="text" 
                                   class="form-control" 
                                   id="searchText" 
                                   placeholder="Search jokes..." 
                                   @bind="searchText" 
                                   @bind:event="oninput"
                                   @onkeyup="FilterJokes" />
                        </div>
                        <div class="col-md-3">
                            <label for="categoryFilter" class="form-label">Category</label>
                            <select class="form-select" id="categoryFilter" @bind="categoryFilter" @onchange="FilterJokes">
                                <option value="">All Categories</option>
                                @foreach (var category in allCategories)
                                {
                                    <option value="@category.JokeCategoryTxt">@category.JokeCategoryTxt</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label for="sortBy" class="form-label">Sort By</label>
                            <select class="form-select" id="sortBy" @bind="sortBy" @onchange="FilterJokes">
                                <option value="id">ID</option>
                                <option value="text">Joke Text</option>
                                <option value="category">Category</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label for="sortOrder" class="form-label">Order</label>
                            <select class="form-select" id="sortOrder" @bind="sortOrder" @onchange="FilterJokes">
                                <option value="asc">Ascending</option>
                                <option value="desc">Descending</option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Joke</th>
                                <th>Categories</th>
                                <th>Active</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (filteredJokes != null && filteredJokes.Any())
                            {
                                @foreach (var joke in filteredJokes)
                                {
                                    <tr>
                                        <td>@joke.JokeId</td>
                                        <td class="joke-text">@(joke.JokeTxt?.Substring(0, Math.Min(100, joke.JokeTxt?.Length ?? 0)))@(joke.JokeTxt?.Length > 100 ? "..." : "")</td>
                                        <td>@joke.Categories</td>
                                        <td>@joke.ActiveInd</td>
                                        <td>
                                            <button class="btn btn-sm btn-primary" @onclick="() => EditJoke(joke.JokeId)">
                                                <i class="fas fa-edit"></i> Edit
                                            </button>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5" class="text-center">No jokes found</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="mt-3">
                    <p>Total Jokes: @(filteredJokes?.Count() ?? 0) of @(allJokes?.Count() ?? 0)</p>
                </div>
            }
        </div>
    </div>
</div>
